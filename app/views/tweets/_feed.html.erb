
<div class="row d-flex justify-content-center">
	<div class="col-8">
		<% if logged_in? %>
			<div class="media justify-content-center">
				<figure class="media">
					<div class="media align-self-start mr-3">
						<p class="image">
              <%= image_tag current_user.avatar.variant(combine_options:{resize:"64x64^",crop:"64x64+0+0",gravity: :center}).processed %>
		    		</p>
		    	</div>
		   	</figure>
		  	<div class="form-group col-md-6">
					<%= render 'form', tweet: @tweet %>
				</div>
			</div>
		<% end %>


			<ul class="list-unstyled">
				<% @tweets.each do |tweet| %>
			  <div class="media my-2">
			  	<div class="media align-self-start mr-3">
			  		<p class="image">
			  		<%= image_tag tweet.user.avatar.variant(combine_options:{resize:"64x64^",crop:"64x64+0+0",gravity: :center}).processed %>
		    		</p>
			    </div>	
			    <div class="media-body">
			      <strong><%= tweet.user.username %></strong>
			      <p class="media mb-0"><%= tweet.tweet %></p>
			      <div>
					    <% if logged_in? && current_user.id == tweet.user_id %>
					      <div>
					        <%= link_to edit_tweet_path(tweet), class: "level-item" do %>
					        	<span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
					        <% end %>
					        <%= link_to tweet, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?" } do %>
					          <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
							<% end %>
					      </div>
					    <% end %>
						</div>
				  </div>
				</div><% end %> 
			</ul>	 
	</div>		
</div>